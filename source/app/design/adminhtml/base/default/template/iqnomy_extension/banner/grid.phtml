                            <td class="a-center last">
                                <a href="<?php echo $this->getRowUrl($row); ?>"><?php echo Mage::helper('iqnomy_extension')->__("Edit"); ?></a>
                            </td>
                        </tr>
                        <?php $even = !$even; ?>
                    <?php } ?>
