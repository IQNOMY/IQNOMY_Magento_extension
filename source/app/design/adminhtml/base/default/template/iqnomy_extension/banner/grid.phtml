                            <td><?php echo $row->getContainer()->getName(); ?></td>
                            <td><?php echo $row->getHeight()." px"; ?></td>
                            <td><?php if($row->getAnimationType() == IQNOMY_Extension_Model_Banner::animationTypeFade) { echo Mage::helper('iqnomy_extension')->__("Fading"); } elseif($row->getAnimationType() == IQNOMY_Extension_Model_Banner::animationTypeSlide) { echo Mage::helper('iqnomy_extension')->__("Sliding"); } else { echo Mage::helper('iqnomy_extension')->__("None"); }?></td>
